<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Quiz de Usuario"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        />
    <TextView
        android:id="@+id/currentQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Pregunta ?/10"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textColor="@android:color/white"
        android:layout_below="@id/userNameTextView"
        />

    <ImageView
        android:id="@+id/currentImageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"

        android:layout_above="@id/question"
        />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="5dp"
        android:text="Question text"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"

        android:layout_above="@id/answers"

        />
    <LinearLayout
        android:id="@+id/answers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/ans_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ans_1"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            />
        <Button
            android:id="@+id/ans_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ans_2"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"

            />
        <Button
            android:id="@+id/ans_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ans_3"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"

            />
        <Button
            android:id="@+id/ans_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="ans_4"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"

            />
    </LinearLayout>
    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Submit"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        android:backgroundTint="#644aa8"
        android:textAlignment="center"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="40dp"

        android:layout_below="@id/answers"
        />

</RelativeLayout>
